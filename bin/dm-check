#!/usr/bin/env bash
set -Eeuo pipefail
trap "exit 1" TERM
function die {
	# 20251225
	if [ $# -gt 0 ]
	then
		echo -e "$1" 1>&2
	else
		grep '#@' /proc/$$/fd/255 \
			| sed -n '/^#@ HELP_START/,/^#@ HELP_END/p' \
			| grep -v "^#@ HELP_" \
			| sed "
				s/^#@//;
				s/) #@ =/=/;
				s/) #@ /\n\t\t/;
				s/\t#@ /\t/;
				s/ \+/ /;
				s/^\t\t/\t/;
				s/^ //" \
			| sed "
				s/\t/    /g;
				s/ | /, /"
	fi
	Pgid=$(ps -o pgid= $$ | tr -d " ")
	[ $(cat /proc/$Pgid/task/$Pgid/children | wc -w) -lt 2 ] \
		&& exit 1 \
		|| kill 0
}

function readable_time {
	if [ -f $1 ]
	then
		let Ts=$(stat -c %Y $1)
	else
		Ts=0
	fi
	let Ts=$(date +%s)-$Ts || :
	if [[ Ts -ge 86400 ]]
	then
		((Ts=Ts/86400))
		echo ${Ts}d
	elif [[ Ts -ge 3600 ]]
	then
		((Ts=Ts/3600))
		echo ${Ts}h
	elif [[ Ts -ge 60 ]]
	then
		((Ts=Ts/60))
		echo ${Ts}m
	else
		echo ${Ts}s
	fi
}

function report_then_quit {
	CutFrom=$1
	if [ "$Report" = "JSON" ]
	then
		echo '{ "version":"1.1", "alerts": {'
	elif [ "$Report" != "TXT" ]
	then
		die "ERR-103: unsupported report format"
	fi
	! ((Row=0))
	! ((Ok=0))
	while read F
	do
		Cnt=$(cat $F)
		if [ "$Cnt" = "0" ];
		then
			((Ok+=1))
			continue
		fi
		[ -n "$Cnt" ] || Cnt=NA
		Task="$(realpath -s ${F::-11} |cut -c $CutFrom-)"
		Exit=$(cat ${F::-11}/out-exitcode)
		[ -n "$Exit" ] || Exit=NA
		if [ "$Report" = "TXT" ]
		then
			[ $Row != 0 ] || echo -e "Count\tTime\tExit\tTask"
			Tm=$(readable_time ${F::-11}/diff-previous)
			echo -e "$Cnt\t$Tm\t$Exit\t$Task"
		else
			[ $Row -eq 0 ] || echo ","
			Since=$(date -u -Iseconds -d @$(stat -c %Y ${F::-11}/diff-previous))
			Diff=$(base64 -w 0 $(echo $F | sed -e 's/-count$/-current/') )
			echo -e "\"$Task\": {\"since\":\"$Since\", \"count\":$Cnt, " \
				"\"exit\":$Exit, \"diff\":\"$Diff\"}"
		fi
		((Row+=1))
	done < <(find . -type f -name diff-count | sort)
	if [ "$Report" = "TXT" ]
	then
		echo "OK: $Ok"
	else
		echo "}, \"OK\" : $Ok }"
	fi
	exit
}

All=NO
Report=NO
Ignore=NO
OptShort="hvarji"
OptLong="help,version,all,report,json-report,ignore-exitcode"
Opts=$(getopt -o $OptShort --long $OptLong -n "$(basename $0)" -- "$@")
eval set -- "$Opts"
while [ $# -gt 0 ]
do
	case "$1" in
#@ HELP_START
#@ SYNOPSIS
#@	dm-check [OPTION]...
#@ EXAMPLE
#@	dm-check -ar
#@	dm-check -a
#@ DESCRIPTION
		-h | --help) #@ Display this help message and exit.
			die ;;
		--version) #@ Display version information and exit.
			die 20260109 ;;
		-v ) #@ Enable verbose output.
			set -x
			shift ;;
		-a | --all) #@ Check all tasks, regardless of the current directory.
			All=YES
			shift ;;
		-r | --report) #@ Print the report in tab-delimited format.
			Report=TXT
			shift ;;
		-j | --json-report) #@ Print the report in json format.
			Report=JSON
			shift ;;
		-i | --ignore--exitcode) #@ Ignore the exit code and override the
			#@ standard status file.
			Ignore=YES
			shift ;;
		--)
			shift
			break ;;
		*)
			break ;;
#@ AUTHOR
#@	Manhong Dai, MNI, U of Michigan
#@ COPYRIGHT
#@	Copyright Â© 2002-2026 University of Michigan. MIT License
#HELP_END
	esac
done
DaimonConf=/etc/daimon.conf
. $DaimonConf || die "ERR-100: Configuration file $DaimonConf is missing"
[ -n "$DaimonVar" ] \
	|| die "ERR-101: DaimonVar is not in the configuration file $DaimonConf"
if [ "$All" = "YES" ]
then
	cd $DaimonVar
elif [[ $PWD != $DaimonVar* ]]
then
	die "ERR-102: cd to any directory under $DaimonVar at first, or use '-a'"
fi
CutFrom=$(echo $DaimonVar/ | wc -c)
[ "$Report" = "NO" ] || report_then_quit $CutFrom
Tasks=($(find . -type d | sort))
Step=1
for ((i=0; i>=0 && i<${#Tasks[@]}; i+=$Step))
do
	f=${Tasks[$i]}
	[ -f $f/lock ] || continue
	[ -f $f/diff-count ] || continue
	! diff -q $f/diff-count <(echo 0) > /dev/null || continue
	[ -f $f/out-current ] || continue
	Admin=", [a]dd, or [o]verride"
	[ -w $f/lock ] || Admin=""
	Task=$(realpath -s $f | cut -c $CutFrom-)
	if [ -f $f/out-standard ]
	then
		Standard=$f/out-standard
	else
		Standard=/dev/null
	fi
	while :
	do
		clear
		Tempfile=$(mktemp)
		if ! Md5sum=$(flock -xn $f/lock bash -c "md5sum $f/out-current; \
			diff --color=always $f/out-current $Standard > $Tempfile || :")
		then
			read -n 1 -r -p "$Task: is locked by another process. [b]ack, \
next[q] or any key to retry? " Ans
			case "$Ans" in
				B|b )
					((Step=-1))
					break;;
				Q|q )
					((Step=1))
					break;;
				* )
					continue;;
			esac
		fi
		set +eE
		GREP_COLORS='ms=07;31:mc=01;31:sl=:cx=:fn=35:ln=32:bn=32:se=36' \
			grep --color=always -e ^ -e "CRITICAL:.*" $Tempfile \
			| less -RKFXP "$Task"
		set -eE
		rm $Tempfile
		Exit=$(cat $f/out-exitcode)
		[ "$Ignore" = "YES" ] || [ -z "$Admin" ] || [ "$Exit" = 0 ] || Admin=""
		read -n 1 -r -p "$Task: exit $Exit, $(readable_time $f/diff-previous) \
ago, $(cat $f/diff-count) times. [b]ack, next[q]$Admin?" Ans
		echo
		case "$Ans" in
			A|a|O|o )
				[ ! -z "$Admin" ] || continue
				(
					flock -xn 99 || exit 1
					echo $Md5sum | md5sum -c | grep -qw OK || exit 1
					Ts=$(date +%FT%T)
					mv $f/diff-count $f/history-$Ts-norm
					if [ "$Ans" = "o" -o "$Ans" = "O" ]
					then
						mv $f/out-standard $f/history-$Ts-standard
						rm -f $f/out-standard.*
						cp $f/out-current $f/out-standard
					else
						for ((i=0; ; i++))
						do
							[ -f $f/out-standard.$i ] || break
						done
						cp $f/out-current $f/out-standard.$i
					fi
					echo 0 > $f/diff-count
				) 99> $f/lock && break || continue ;;
			B|b )
				((Step=-1))
				break ;;
			Q|q )
				((Step=1))
				break ;;
		esac
	done
	echo
done
